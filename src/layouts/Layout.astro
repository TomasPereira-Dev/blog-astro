---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html class="bg-dark dark:bg-[#FBF9F7]" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="px-4 pt-4 max-w-screen-sm mx-auto">
		<div class="hidden absolute z-0 top-0 left-0 w-full h-full overflow-clip md:block">
			<img class="absolute -right-[13%] z-[99]" src="./pattern-dark.svg" alt=" ">
			<img class="absolute top-[33%] -left-[13%] z-[99]" src="./pattern-dark.svg" alt=" ">
		</div>
		<Header/>
		    <main class="relative z-40 px-2 border border-white/25">
                <slot />
		    </main>
        <Footer />
	</body>
</html>
