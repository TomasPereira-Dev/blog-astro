---
import { loadQuery } from "../sanity/lib/load-query";

interface item{
    title: string;
    publishedAt: string;
    slug: {
        current: string;
    };
};

const { data: post } = await loadQuery({
    query: `*[_type == "post"]`,
});
---

<section class="px-2 py-6 space-y-7 border-b border-white/25">
    <h2 class="relative text-3xl text-white font-bold w-fit after:absolute after:bottom-2 after:-right-[2.5ch] after:content-[_] after:p-[2px] after:w-[2ch] after:bg-sky-400">Lastest Articles</h2>
    <ul class="space-y-4">
    {
        post.map((item: item) => (
            <li>
                <a href={`/${item.slug.current}`}><h3 class="text-xl text-white font-semibold">{item.title}</h3></a>
            <h4 class="text-white/50 italic">Publicado el {new Date(item.publishedAt).toLocaleString("es-AR", {timeZone: "GMT", day:"numeric", month:"long", year: "numeric"})}</h4>
        </li>
        ))
    }
    </ul>
    <a href="/articles" class="text-white text-lg font-semibold underline underline-offset-4 decoration-4 decoration-sky-400">View all articles</a>
</section>